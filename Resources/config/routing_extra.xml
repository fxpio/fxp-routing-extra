<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_routing_extra.router_extra.class">Sonatra\Bundle\RoutingExtraBundle\Routing\RouterExtra</parameter>
    </parameters>

    <services>
        <service id="sonatra_routing_extra.router_extra" class="%sonatra_routing_extra.router_extra.class%">
            <argument type="service" id="router" />
            <argument type="service" id="property_accessor" />
        </service>
    </services>

</container>
